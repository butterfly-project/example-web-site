{% extends 'layout.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}

    <h1>Users</h1>

    <table border="1">
        <tr>
            <th>Username</th>
            <th>E-mail</th>
            <th>Count messages</th>
        </tr>
    {% for user in data.users %}
        <tr>
            <td>{{ user.username }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.messages }}</td>
        </tr>
    {% endfor %}
    </table>

    <hr>

    <a href="/">Home</a>
{% endblock %}
